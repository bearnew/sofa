.wrapper {
    position: fixed;
    display: flex;
    justify-content: space-between;
    width: 100%;
    bottom: 0;
    background: #fff;
}
.wrapper::before {
    position: absolute;
    width: 200%;
    height: 1px;
    top: 0;
    left: 0; 
    background: #eee;
    transform: scale(0.5);
}
.item {
    flex: 1;
    text-align: center;
    padding: 6px 15px;
}
.share,
.praise {
    padding: 10px 18px;
    font-size: 14px;
    border-radius: 30px;
    color: #fff;
}
.share {
    background: #19A0F1;
    padding: 2px 18px;
}
.praise {
    background: #FF9A00;
}