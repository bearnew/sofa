.customer-box {
    position: relative;
    box-sizing: border-box;
    width: 90%;
    margin: 12px auto;
    padding: 1px;
    border-radius: 4px;
    /* background: linear-gradient(#F80, #2ED); */
}
.customer {
    border-radius: 8px;
    background: #fff;
    font-size: 12px;
    padding: 10px;
}
.creator {
    display: flex;
}
.creator .right {
    padding-top: 8px;
}
.creator .user {
    margin-right: 5px;
}
.creator .avatar {
    display: block;
    width: 50px;
    height: 50px;
    border-radius: 50%;
}
.creator .nickname {
    text-align: center;
}
.progress {
    margin: 15px auto;
    width: 80%;
}
.participant {
    white-space: nowrap;
    overflow: scroll;
}
.participant::-webkit-scrollbar {
    display: none;
}
.participant .participant-avatar {
    width: 40px;
    height: 40px;
    margin: 3px 8px;
    border-radius: 50%;
}
.participant .participant-avatar:first-child {
    margin-left: 0;
}
.participant .participant-avatar:last-child {
    margin-right: 0;
}