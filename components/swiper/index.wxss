.swiper-wrapper {
    position: relative;
}
swiper {
    width: 100%;
    height: 200px;
}
swiper-item {
    border-radius: 4px;
    height: 200px;
}
.swiper image {
    width: 100%;
    height: 200px;
}
/*用来包裹所有的小圆点  */
.dot-wrapper{  
    position: absolute;
    display: flex;
    flex-direction: row;
    left: 50%;
    bottom: 25px;
    transform: translateX(-50%);
}  
  /*未选中时的小圆点样式 */
  .dot{  
    width: 12px;  
    height: 12px;   
    border-radius: 50%;
    margin-right: 12px;
    background-color: white;
  }  
  /*选中以后的小圆点样式  */
  .active{  
    width: 12px;   
    height: 12px;
    background-color: #FFEA00;
  } 
